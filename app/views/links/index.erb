<h1> Links </h1>

<ul id='links'>
  <% @links.each do |link| %>
    <li>
      Title: <%=link.title %>
      URL: <a href="http://<%=link.url%>"><%=link.title%></a>
    </li>
  <% end %>
</ul>
<form action="/links/new" >
  <input type="submit" value="Add new link">
  </form>

  <form action="/tags/:name" method="GET">
    <input type = "text" name='tag'>
    <input type="submit" value="Search by tags">
    </form>
