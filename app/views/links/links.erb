<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
  </head>
  <body>
    <% if current_user %>
      Welcome <%= current_user.email %>
    <% end %>

    <ul id="links">
      <% @links.each do |link| %>
        <li>
          <a href="http://<%= link.url %>"><%= link.title %></a>
        </li>
      <% end %>
    </ul>

    <form action="/links/new" >
      <input type="submit" value="Add new link" />
    </form>

    <form action="/tags/:name" method="GET">
      <input type = "text" name="tag" />
      <input type="submit" value="Search by tags" />
    </form>
  </body>
</html>
